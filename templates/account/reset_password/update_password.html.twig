{% extends 'base.html.twig' %}

{% block title %}
    Mot de passe oublié
{% endblock %}

{% block body %}
	<div class="container reset-password-container">
		<div class="row">
			<div class="col-md-3">&nbsp;</div>
			<div class="col-md-6">
				<div class="bg-reset-password py-3 px-3">
					<h3 class="text-center">Réinitilisation du mot de passe</h3>
                    {{ form_start(form) }}
                    {{ form_widget(form) }}

                    <button class="btn-reset-password">
                        <i class="fas fa-check"></i>
                        Mettre à jour
                    </button>

                    {{ form_end(form) }}

				</div>
			</div>
		</div>
	</div>
{% endblock %}
