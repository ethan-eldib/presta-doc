{% extends 'base.html.twig' %}

{% block title %}
    Mot de passe oublié
{% endblock %}

{% block body %}
	<div class="container reset-password-container">
		<div class="row">
			<div class="col-md-3">&nbsp;</div>
			<div class="col-md-6">
				<div class="bg-reset-password py-3 px-3">
					<h3 class="text-center">Réinitilisation du mot de passe</h3>
					<form method="post">
						<div class="form-group">
							<input type="text" name="email" id="email" class="form-control  mt-4" placeholder="Entrez votre adresse email..." required>
						</div>
						<div class="form-group text-center">
							<button type="submit" class="btn-reset-password mt-4">
                                <i class="fas fa-check"></i>
                                 Confirmer
                            </button>
						</div>
                        <hr>
                        <p class="text-center">
                            <a href="{{ path('account_login') }}">Vous connecter</a> ?
                        </p>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
