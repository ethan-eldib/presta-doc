{% extends "base.html.twig" %}

{% block title %}
	Vous inscrire
{% endblock %}

{% block body %}
	<div class="container account-registration">
		<div class="row">
			<div class="col-md-3">&nbsp;</div>
			<div class="col-md-6">
				<div class="bg-registration py-3 px-3">
					<h1 class="text-center">Vous inscrire</h1>
					<hr>
					{{ form_start(form) }}
					{{ form_widget(form) }}
					<button type="submit" class="btn-registration mt-4">
						<i class="fas fa-check"></i>
						Inscription
					</button>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>

{% endblock %}
