{% extends 'admin/base.html.twig' %}

{% block title %}
	Liste des dossiers
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="my-5 text-center">Liste des dossiers</h1>
		<table class="table table-hover">
			<thead>
				<tr>
					<th>N° du dossier</th>
					<th>Nom du dossier</th>
					<th style="width:15%" class="text-center">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for folder in folders %}
					<tr>
						<td>
							<div class="badge badge-primary">
								{{ folder.id }}
							</div>
						</td>
						<td>{{ folder.title }}</td>

						<td class="text-center">
							<a href="{{ path('admin_document_show', { id: folder.id }) }}">
								<i class="fas fa-eye"></i>
								Voir
							</a>
						</td>
					</tr>
				{% else %}
					<div class="card text-dark bg-light mb-5">
						<div class="card-header text-center">Aucun dossier</div>
						<div class="card-body">
							<p class="card-text text-center">Il n'y aucun dossier d'enregistré sur la base de données</p>
						</div>
					</div>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
